.form-signin.w-100.m-auto.row
  = render "users/shared/error_messages", resource: resource
  .col.align-self-center.me-5
    i.bi.bi-twitter.d-flex.justify-content-center.m[style="font-size: 300px;"]
  .col.p-5.my-5.me-5
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      h1.h3.mb-5.fw-normal
        | アカウントを作成
      .form-floating.mb-4.w-50
        = f.text_field :name , :class => "form-control" , placeholder: " "
        = f.label :name, "名前"
      .form-floating.mb-4.w-50
        = f.email_field :email, :class => "form-control" , placeholder: " "
        = f.label :email, "メール"
      .form-floating.mb-4.w-50
        = f.text_field :phone_number, :class => "form-control" , placeholder: " "
        = f.label :phone_number, "電話番号"
      .form-floating.mb-4.w-50
        = f.text_field :birthday, :class => "form-control" , placeholder: " "
        = f.label :birthday, "生年月日"
      .form-floating.mb-4.w-50
        = f.password_field :password, :class => "form-control" , placeholder: " "
        = f.label :password, "パスワード"
        - if @minimum_password_length
          |  (
          = @minimum_password_length
          |  文字以上入力してください) 
      .form-floating.mb-4.w-50
        = f.password_field :password_confirmation, :class => "form-control" , placeholder: " "
        = f.label :password_confirmation, "パスワード(確認)"
      div
        = f.submit "Sign up" , :class => "btn btn-primary py-2 w-50"
